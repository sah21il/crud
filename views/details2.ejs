<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/head.ejs') %>
    </head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div id="container" class="container">
        <%- include('./partials/sidebar.ejs') %>
        <div id="main" class="main" style="background-color: antiquewhite;">
            
            <% if (audio && audio.file) { %>
            <div class="eachbox">
                <div style="width: fit-content;">

                    <!-- Audio Player -->
                    <audio controls style="width: 300px; border-radius: 10px;">
                        <source src="data:<%= audio.file.contentType %>;base64,<%= audio.file.data.toString('base64') %>" type="<%= audio.file.contentType %>">
                        Your browser does not support the audio element.
                    </audio>
                    
                    <!-- Audio Metadata -->
                    <div>
                        <h5 style="color: #333; font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
                            <%= audio.title %>
                        </h5>
                        <p style="color: #555; font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
                            <%= audio.description %>
                        </p>
                    </div>

                    <!-- Delete Button -->
                    <div>
                        <a class="delete" href="/music/<%= audio._id %>?_method=DELETE" style="color: red; text-decoration: none; font-weight: bold;">
                            Delete
                        </a>
                    </div>

                </div>
            </div>
            <% } else { %>
                <p>Audio file not available</p>
            <% } %>
            
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>

    <script src="/js/script2.js"></script>
</body>
</html>